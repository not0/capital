---
import Viewer from "@components/comics/Viewer.svelte";
import { getPagePaths, getThumbnailPath } from "@utils/comicImage";

const { comic, closeUrl } = Astro.props;

const baseUrl = import.meta.env.BASE_URL;
const pages = getPagePaths(comic.id);
---

<Viewer
  client:only="svelte"
  comic={comic}
  thumbnail={getThumbnailPath(comic)}
  pages={pages}
  closeUrl={closeUrl}
/>
